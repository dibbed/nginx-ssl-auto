# Nginx SSL Auto Configuration
# Copy this file to .env and modify the values as needed

# Nginx configuration paths
NGINX_SITES_AVAILABLE=/etc/nginx/sites-available
NGINX_SITES_ENABLED=/etc/nginx/sites-enabled

# Let's Encrypt configuration
LETSENCRYPT_EMAIL_DOMAIN=admin
LETSENCRYPT_WEBROOT=/var/www/html

# SSL configuration
SSL_PROTOCOLS=TLSv1.2 TLSv1.3
SSL_CIPHERS=HIGH:!aNULL:!MD5

# Default ports
DEFAULT_HTTP_PORT=80
DEFAULT_HTTPS_PORT=443

# System commands (useful for different distributions or custom setups)
SUDO_COMMAND=sudo
APT_GET_COMMAND=apt-get
SYSTEMCTL_COMMAND=systemctl

# Timeout settings (in seconds)
PORT_TEST_TIMEOUT=10
